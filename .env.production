# Production Environment Configuration

# Application
APP_ENV=production
DEBUG=false
APP_URL=https://your-domain.com
ADMIN_URL=https://your-domain.com/admin

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ppv_streaming
DB_USER=ppv_production_user
DB_PASS=REPLACE_WITH_PRODUCTION_DB_PASSWORD

# Security (Use strong secrets in production)
