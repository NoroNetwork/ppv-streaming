# Staging Environment Configuration

# Application
APP_ENV=staging
DEBUG=false
APP_URL=https://staging.your-domain.com
ADMIN_URL=https://staging.your-domain.com/admin

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ppv_streaming_staging
DB_USER=ppv_staging_user
DB_PASS=REPLACE_WITH_STAGING_DB_PASSWORD

# Security (Use strong secrets in staging)
JWT_SECRET=REPLACE_WITH_STAGING_JWT_SECRET_64_CHARS_MINIMUM
APP_SECRET=REPLACE_WITH_STAGING_APP_SECRET_64_CHARS_MINIMUM
BCRYPT_COST=12

# MediaMTX Configuration
MEDIAMTX_API_URL=http://localhost:9997/v3
MEDIAMTX_API_TOKEN=REPLACE_WITH_STAGING_MEDIAMTX_TOKEN

# Payment Configuration (Stripe Test Mode)
STRIPE_PUBLIC_KEY=pk_test_REPLACE_WITH_STAGING_STRIPE_PUBLIC_KEY
STRIPE_SECRET_KEY=sk_test_REPLACE_WITH_STAGING_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_STAGING_WEBHOOK_SECRET

# Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=REPLACE_WITH_STAGING_REDIS_PASSWORD

# CORS
CORS_ALLOWED_ORIGINS=https://staging.your-domain.com