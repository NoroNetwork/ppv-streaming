{
    "name": "ppv-noronetwork/streaming-platform",
    "description": "PPV Streaming Platform with User Portal and Admin Panel",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.5",
        "league/plates": "^3.4",
        "guzzlehttp/guzzle": "^7.5",
        "firebase/php-jwt": "^6.8",
        "respect/validation": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "vimeo/psalm": "^5.15",
        "friendsofphp/php-cs-fixer": "^3.21"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}